.user-bg{
  background-color: #108ee9;
  height: 240rpx;
}
.user-info{
  display: flex;
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  align-items: center;
  margin: -100rpx 24rpx 30rpx;
  border-radius: 8rpx;
}
.user-info .user-headimg{
  height: 120rpx;
  flex: 0 0 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  position: relative;
  overflow: hidden;
}
.user-info .user-headimg::after{
  border-radius: 50%;
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border: 60rpx solid #ffffff;
  content: "";
  left: 50%;
  margin-left: -120rpx;
  margin-top: -120rpx;
  top: 50%;
}
.user-info .user-nickname{
  font-size: 40rpx;
  color: rgba(0, 0, 0, .85);
  line-height: 50rpx;
}
.list{
  margin: 0 24rpx;
}
.list .item{
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 2rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}
.list .item .icon{
  width: 64rpx;
  height: 64rpx;
  margin-right: 32rpx;
}
.list .item .icon image{
  width: 100%;
}
.list .item .label{
  font-size: 32rpx;
  color:rgba(0, 0, 0, .85);
  line-height: 44rpx;
}
.list .item::before{
  position: absolute;
  content: '';
  bottom: 0;
  right: 0;
  left: 24rpx;
  height: 1px;
  width: 200%;
  transform: scale(0.5);
  transform-origin: left center;
  background-color: rgba(0, 0, 0, .25);
}
.list .item:last-child::before{
  height: 0;
}
.list .item.access::after{
  position: absolute;
  right: 32rpx;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  margin-top: -8rpx;
  border-top: 2rpx solid rgba(0, 0, 0, .25);
  border-right: 2rpx solid rgba(0, 0, 0, .25);
  content: '';
  transform: rotate(45deg);
}
