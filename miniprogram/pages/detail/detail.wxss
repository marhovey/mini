.banner{
  margin-bottom: 24rpx;
}
.banner .swiper{
  height: 750rpx;
}
.banner .swiper .swiper-item image{
  width: 750rpx;
  height: 750rpx;
}
.good-info{
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 0 24rpx 120rpx;
}
.good-info .title{
  /* background-color: #ffffff; */
  font-size: 34rpx;
  color: rgba(0, 0, 0, .85);
  line-height: 50rpx;
  margin-bottom: 24rpx;
  padding-top: 32rpx;
  font-weight: bold;
}
.good-info .price{
  font-size: 38rpx;
  color: #FD7B4D;
  font-weight: bold;
}
.good-info .good-desc{
  font-size: 32rpx;
  color: rgba(0, 0, 0, .65);
  line-height: 50rpx;
  border-top: 2rpx dashed rgba(0, 0, 0, .4);
  padding: 24rpx 0;
}
.good-info .sale-cnt{
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 24rpx;
}
.good-info .detail image{
  width: 100%;
}
.button-list{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background-color: #ffffff;
  left: 0;
  right: 0;
  box-shadow: 0px -1px 3px 0 #D6D6D6;
  display: flex;
  align-items: center;
  text-align: center;
}
.button-list .button-item{
  padding: 0 24rpx;
  position: relative;
}
.button-list .service{
  flex: 1;
}
.button-list .service .btn-primary{
  border-radius: 0;
  height: 100rpx;
  line-height: 100rpx;
  border: none;
}
.button-list image{
  width: 60rpx;
  vertical-align: top;
}
.button-list .word{
  font-size: 24rpx;
  color: #108ee9;
  line-height: 30rpx;
}