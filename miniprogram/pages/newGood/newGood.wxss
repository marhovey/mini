.form-list .form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  position: relative;
}
.form-list .form-item:after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}
.form-list .form-item .form-label {
  flex: 0 0 200rpx;
}
.form-list .form-item .form-value {
  flex: 1;
}
.form-list .form-item .form-value .form-ipt {
  width: 100%;
}
.form-list .form-item .form-value .img-list:after {
  clear: both;
  content: "";
}
.form-list .form-item .form-value .img-list .img-item {
  width: 100rpx;
  height: 100rpx;
  float: left;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
  margin-right: 16rpx;
  position: relative;
}
.form-list .form-item .form-value .access{
  position: relative;
}
.form-list .form-item .form-value .access::after{
  position: absolute;
  right: 0;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  margin-top: -8rpx;
  border-top: 2rpx solid rgba(0, 0, 0, .25);
  border-right: 2rpx solid rgba(0, 0, 0, .25);
  content: '';
  transform: rotate(45deg);
}
.form-list .form-item .form-value .img-list .img-item image {
  width: 100%;
  height: 100%;
}
.form-list .form-item .form-value .img-list .img-item .del-icon {
  position: absolute;
  right: -10rpx;
  top: -20rpx;
  background-color: #ffffff;
  border-radius: 50%;
}
.form-list .form-item .form-value .img-list .img-item.upload-btn:before {
  position: absolute;
  content: "";
  width: 4rpx;
  left: 50%;
  top: 50%;
  margin-left: -2rpx;
  margin-top: -10rpx;
  height: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
.form-list .form-item .form-value .img-list .img-item.upload-btn:after {
  position: absolute;
  content: "";
  width: 20rpx;
  height: 4rpx;
  left: 50%;
  top: 50%;
  margin-left: -10rpx;
  margin-top: -2rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
.save-btn{
  padding: 30rpx 24rpx;
}